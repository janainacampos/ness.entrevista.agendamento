@model NESS.Entrevisa.Agendamento.Models.AgendaModel

@{
    ViewBag.Title = "Scheduling";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agendar:</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>AgendaModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Data)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Paciente, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-20">
            @Html.DropDownList("PacienteID", String.Empty)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Scheduling" class="btn btn-default" />
        </div>
    </div>
</div>
}

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
